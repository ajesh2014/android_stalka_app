<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TextView android:id="@+id/textView1" android:text="Conversation" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></TextView>
    <EditText android:id="@+id/input" android:inputType="textMultiLine" android:layout_height="wrap_content" android:layout_width="305dp">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:text="Send" android:layout_marginBottom="32dp" android:layout_height="wrap_content" android:id="@+id/send" android:layout_width="wrap_content"></Button>
    <ListView android:layout_width="fill_parent" android:layout_height="320dp" android:id="@android:id/list" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"></ListView>
</LinearLayout>