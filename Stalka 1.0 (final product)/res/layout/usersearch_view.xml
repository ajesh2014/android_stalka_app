<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TextView android:text="Search Users:" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/textView1"></TextView>
    <EditText android:id="@+id/input" android:layout_height="wrap_content" android:layout_width="match_parent"></EditText>
    <Button android:text="Search" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="23dp" android:id="@+id/search"></Button>
    <ListView android:layout_width="fill_parent" android:layout_height="320dp" android:id="@android:id/list"></ListView>
</LinearLayout>